<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/primary"
                                             tools:applicationContext="com.sample.signin.app.ui.signin.SignInActivity">


    <Button
        android:id="@+id/google_sign_in_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/slt_bg_google_login"
        android:drawableLeft="@drawable/ic_google_login"
        android:drawablePadding="-48dp"
        android:text="@string/google_login_button_text"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        app:layout_constraintBottom_toTopOf="@+id/facebook_sign_in_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/facebook_sign_in_button"
        app:layout_constraintRight_toRightOf="@+id/facebook_sign_in_button"/>

    <Button
        android:id="@+id/facebook_sign_in_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/slt_bg_facebook_login"
        android:drawableLeft="@drawable/ic_facebook_login"
        android:drawablePadding="-48dp"
        android:text="@string/facebook_login_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
